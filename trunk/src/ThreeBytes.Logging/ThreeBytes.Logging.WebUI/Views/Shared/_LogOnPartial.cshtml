@if (Request.IsAuthenticated)
{
    <ul class="nav pull-right">
        <li>
            @Html.ActionLink("Log Off", "LogOff", "Login", null, new { @class = "pull-right" })
        </li>
    </ul>
}
else
{
    <ul class="nav pull-right">
        <li id="partial-login-container" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Sign in<b class="caret"></b></a>
            <ul class="dropdown-menu dropdown-form">
                <li class="dropdown-caret right">
                    <span class="caret-outer"></span>
                    <span class="caret-inner"></span>
                </li>
                <li>@{ Html.RenderAction("LoginPartial", "Login"); }</li>
                <li class="divider"></li>
                <li>@{ Html.RenderAction("Dropdown", "Facebook"); }</li>
                <li>@{ Html.RenderAction("Dropdown", "Foursquare"); }</li>
            </ul>
        </li>
    </ul>
}
